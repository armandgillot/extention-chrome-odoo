{
  "manifest_version": 3,
  "name": "Captivea Odoo Tools",
  "description": "Automatically adds the '?debug=assets' parameter to the URL of ERP Odoo",
  "version": "1.1",
  "author": {
    "email": "armand.gillot@captivea.com"
  },

  "permissions": [
    "tabs",
    "storage"
  ],

  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [{
    "exclude_matches": ["*://*/web/database/selector*", "*://*/web/login*"],
    "matches": ["*://*/web/*", "*://*/web*"],
    "js": ["content_script.js"],
    "run_at": "document_start"
  }]
}
